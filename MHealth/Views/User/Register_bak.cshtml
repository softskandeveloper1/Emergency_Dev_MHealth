@using DAL.Utils;
@{
    ViewBag.Title = "Register";
Layout = "_Layout_front";
}


<div class="app-page-title" style="display:none">
    <div class="page-title-wrapper">
        <div class="page-title-heading">

            <div>
                Bestlife
                <div class="page-title-subheading">
                    Follow the steps below to setup an account. It takes not time to complete
                </div>
            </div>
        </div>

    </div>
</div>

<div class="row">
    <form role="form" method="post" asp-controller="user" asp-action="registerclient" class="f1">

        <h3>Register To Our @AppSetting.GetValue("app_name")</h3>
        <p>Fill in the form to get instant access</p>
        @*<div class="f1-steps">
            <div class="f1-progress">
                <div class="f1-progress-line" data-now-value="16.66" data-number-of-steps="3" style="width: 16.66%;"></div>
            </div>
            <div class="f1-step active">
                <div class="f1-step-icon"><i class="fa fa-user"></i></div>
                <p>about</p>
            </div>
            <div class="f1-step">
                <div class="f1-step-icon"><i class="fa fa-file"></i></div>
                <p>assessment</p>
            </div>
            <div class="f1-step">
                <div class="f1-step-icon"><i class="fa fa-key"></i></div>
                <p>account</p>
            </div>
        </div>*@


        <fieldset>
            @*<h5>Personal Information</h5>*@
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Last name</label>
                        <input maxlength="200" type="text" required="required" name="last_name" class="form-control" placeholder="Enter last name" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Firstname</label>
                        <input maxlength="200" type="text" required="required" name="first_name" class="form-control" placeholder="Enter first name" />
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Phone</label>
                        <input maxlength="200" type="text" required="required" name="phone" class="form-control" placeholder="Enter your phone number" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input maxlength="200" type="text" required="required" name="email" class="form-control" placeholder="Enter your email address" />
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Preferred name</label>
                        <input maxlength="200" type="text" required="required" name="preferred_name" class="form-control" placeholder="Enter your preferred name" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Address</label>
                        <input type="text" required="required" name="address" class="form-control" placeholder="Enter your address" />
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">City of residence</label>
                        <input maxlength="200" type="text" required="required" name="city" class="form-control" placeholder="Enter your city " />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">State</label>
                        <select class="form-control" name="state" required>
                            <option value="1">Abuja</option>

                        </select>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">State</label>
                        <select class="form-control" name="country" required>
                            <option value="1">Nigeria</option>

                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Date of birth</label>
                        @*<input maxlength="200" type="date" required="required" name="dob" class="form-control" />*@
                        <div id="datepicker" class="input-group date"  data-date-format="mm-dd-yyyy">
                            <input class="form-control" type="text" readonly required="required" name="dob" />
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Education level</label>
                        @Html.DropDownList("education_level", new SelectList(Options.Getlookups("education_level"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Gender</label>
                        @Html.DropDownList("gender", new SelectList(Options.Getlookups("gender"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>


            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Can you tell us more about yourself</label>
                        <textarea class="form-control" name="about" required></textarea>
                    </div>
                </div>


            </div>


            <div class="form-row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="f1-buttons">
                            <button type="button" class="btn btn-next">Next</button>
                        </div>
                    </div>
                </div>
            </div>

        </fieldset>

        <fieldset>
            <div class="form-group">
                <label class="control-label">Are you 18 years and older?</label>
                <select class="form-control" id="eligible">
                    <option value="1">Yes</option>
                    <option value="2">No</option>
                </select>
            </div>
            <div class="form-row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6">

                </div>
            </div>



            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">What is your marital status?</label>
                        @Html.DropDownList("marital_status", new SelectList(Options.Getlookups("marital_status"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Religious Preference</label>
                        @Html.DropDownList("religious", new SelectList(Options.Getlookups("yesno"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">What religion do you identify with? (Our counselors are from diverse backgrounds)</label>
                        @Html.DropDownList("religion", new SelectList(Options.Getlookups("religion"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">What led you to seek help today?</label>
                        @Html.DropDownList("help_reason", new SelectList(Options.Getlookups("help_reason"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Have you ever been in counseling or therapy before?</label>
                        @Html.DropDownList("earlier_counseling", new SelectList(Options.Getlookups("yesno"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">How would you rate your current physical health?</label>
                        @Html.DropDownList("physical_health", new SelectList(Options.Getlookups("rating"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">How would you rate your current eating habits?</label>
                        @Html.DropDownList("eating_habit", new SelectList(Options.Getlookups("rating"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">How would you rate your current sleeping habit?</label>
                        @Html.DropDownList("sleeping", new SelectList(Options.Getlookups("sleeping"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Are you currently experiencing overwhelming sadness, grief, or depression?</label>
                        @Html.DropDownList("depression", new SelectList(Options.Getlookups("yesno"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>

            </div>
            <p>Over the last 2 weeks, how often have you been bothered by any of the following problems?</p>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Little interest or pleasure in doing things</label>
                        @Html.DropDownList("reduced_interest", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">Feeling down, depressed, or hopeless</label>
                        @Html.DropDownList("recent_depression", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>


            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Trouble falling or staying asleep, or sleeping too much</label>
                        @Html.DropDownList("sleeping_trouble", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">Feeling tired or having little energy</label>
                        @Html.DropDownList("tiredness", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Poor appetite or overeating </label>
                        @Html.DropDownList("appetite", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">Feeling bad about yourself — or that you are a failure or have let yourself or your family down</label>
                        @Html.DropDownList("feeling_bad", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>


            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Trouble concentrating on things, such as reading the newspaper or watching television</label>
                        @Html.DropDownList("concentration_issue", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>

            </div>

            <div class="form-row">

                <div class="col-md-12">

                    <div class="form-group">
                        <label class="control-label">Moving or speaking so slowly that other people could have noticed?  Or the opposite — being so fidgety or restless that you have been moving around a lot more than usual</label>
                        @Html.DropDownList("fidgety", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Thoughts that you would be better off dead or of hurting yourself in some way </label>
                        @Html.DropDownList("suicidal", new SelectList(Options.Getlookups("rating_days"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">Why does today feel like the right time to begin counseling?</label>
                        @Html.DropDownList("today_feeling", new SelectList(Options.Getlookups("today_feeling"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Are you currently employed? </label>
                        @Html.DropDownList("employed", new SelectList(Options.Getlookups("employed"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">How often do you drink alcohol?</label>
                        @Html.DropDownList("alcohol", new SelectList(Options.Getlookups("alcohol"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Are you currently experiencing anxiety, panic attacks or phobias?</label>
                        @Html.DropDownList("anxiety", new SelectList(Options.Getlookups("yesno"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                    </div>
                </div>

            </div>
            <div class="form-row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="f1-buttons">
                            <button type="button" class="btn btn-previous">Previous</button>
                            <button type="button" class="btn btn-next">Next</button>
                        </div>
                    </div>
                </div>
            </div>


        </fieldset>

        <fieldset>
            @*<h4>Set up your account:</h4>*@
            <div class="form-group">
                <label class="control-label">Email</label>
                <input maxlength="200" type="email" required="required" name="username" class="form-control" placeholder="Enter your email" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input maxlength="200" type="password" required="required" name="password" id="password" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Confirm Password</label>
                <input maxlength="200" type="password" required="required" id="confirm_password" class="form-control" />
            </div>
            <div class="form-group">
                <div class="f1-buttons">
                    <button type="button" class="btn btn-previous">Previous</button>
                    <button type="submit" class="btn btn-submit">Submit</button>
                    @*<button type="button" class="btn btn-next">Next</button>*@
                </div>
            </div>

        </fieldset>

    </form>

</div>



@section scripts{

    <script src="~/assets/scripts/wizard.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <script id="rendered-js">
        $(function () {
            $("#datepicker").datepicker({
                autoclose: true,
                todayHighlight: true
            });
               // datepicker('update', new Date());
        });
    </script>
}

@section styles{
    <link href="~/assets/css/wizard.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css">
   
}
