@using MHealth.Helper;
@{
    var yes_no_dropdown = ViewHelper.GetLookUpDropDown("yesno");
}
<form id="work_history_form">
                    <input type="hidden" name="profile_id" value="@ViewBag.profile_id"/>
                    <input type="hidden" name="appointment_id" value="@ViewBag.appointment_id"/>
    <div class="form-row">
        <div class="col-md-6">
            <div class="position-relative form-group">
                <label for="" class="">Name of Employer</label>
                 <input type="text" class="form-control" required name="employer" id="employer" />
            </div>
        </div> 
        <div class="col-md-6">
            <div class="position-relative form-group">
                <label for="" class="">Length of Employment </label>
                <input type="text" class="form-control" required name="employment_length" id="employment_length" >
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-3">
            <div class="position-relative form-group">
                <label for="" class="">Do you like your Job</label>
                <select class="form-control" name="like_job" required id="like_job" asp-items="yes_no_dropdown" onchange="enableDisable('reason', this.value)">
                    <option value="">--Select--</option>
                </select>
            </div>
        </div>
        <div class="col-md-9">
            <div class="position-relative form-group">
                <label for="" class="">Why or Why Not</label>
                 <input type="text" class="form-control" name="reason" id="reason" />
            </div>
        </div> 
    </div>
     <div class="work-history-container">
        <ol>
        </ol>
    </div>
    <div class="d-block text-right card-footer">
        <button type="button" id="work_history_submit" class="mt-3 btn btn-success">Save and Continue</button>
    </div>
</form>