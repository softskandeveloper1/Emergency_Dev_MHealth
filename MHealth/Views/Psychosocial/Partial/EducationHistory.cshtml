@using MHealth.Helper;
@{
    var yes_no_dropdown = ViewHelper.GetLookUpDropDown("yesno");
}
<form id="education_history_form">
                    <input type="hidden" name="profile_id" value="@ViewBag.profile_id"/>
                    <input type="hidden" name="appointment_id" value="@ViewBag.appointment_id"/>
    <div class="form-row">
        <div class="col-md-12">
            <div class="position-relative form-group">
                <label for="" class=""> How far did you go in school</label>
                <textarea class="form-control" required name="how_far_school" id="how_far_school" ></textarea>
            </div>
        </div>                                   
    </div>
    <div class="form-row">
        <div class="col-md-3">
            <div class="position-relative form-group">
                <label for="" class="">Did you have any learning or behavioral issues in school</label>
                <select class="form-control" required asp-items="yes_no_dropdown" name="behavioural_issues" id="behavioural_issues">
                    <option value="">--Select--</option>
                </select>
            </div>
        </div>
        <div class="col-md-9">
            <div class="position-relative form-group">
                <label for="" class="">Please explain</label>
                <textarea class="form-control" name="behavioural_issues_describe" id="behavioural_issues_describe"></textarea>
            </div>
        </div> 
    </div>
    
    <div class="d-block text-right card-footer">
        <button type="button" id="education_history_submit" class="mt-3 btn btn-success">Save and Continue</button>
    </div>
</form>