@using System.Data;
@{
    ViewBag.Title = "Dashboard";
    var dt = (DataTable)ViewBag.dt;
}

<div class="row breadcrumb_addon">
    <div class="col-lg-10">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page"><a href="javascript:void(0);">Dashboard</a></li>
            </ol>

        </nav>
    </div>
    <div class="col-lg-2">
        @if (User.IsInRole("admin") || User.IsInRole("super_admin"))
        {
            <div class="pull-right" style="margin-top:5px">
                @await Html.PartialAsync("../Shared/_quick_nav")
            </div>

        }
    </div>
</div>
