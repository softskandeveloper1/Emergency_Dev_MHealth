<div class="row">
    <div class="col-md-6 col-xl-3">
        <div class="card mb-3 widget-content bg-midnight-bloom">
            <div class="widget-content-wrapper text-white">
                <div class="widget-content-left">
                    <div class="widget-heading">Clinicians</div>
                    <div class="widget-subheading">All registered clinicians</div>
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-white"><span>@dt?.Rows[0].ItemArray[1]</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card mb-3 widget-content bg-arielle-smile">
            <div class="widget-content-wrapper text-white">
                <div class="widget-content-left">
                    <div class="widget-heading">Clients</div>
                    <div class="widget-subheading">All our clients</div>
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-white"><span>@dt?.Rows[0].ItemArray[0]</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card mb-3 widget-content bg-grow-early">
            <div class="widget-content-wrapper text-white">
                <div class="widget-content-left">
                    <div class="widget-heading">Sessions</div>
                    <div class="widget-subheading">Total sessions held</div>
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-white"><span>@dt?.Rows[0].ItemArray[2]</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card mb-3 widget-content bg-premium-dark">
            <div class="widget-content-wrapper text-white">
                <div class="widget-content-left">
                    <div class="widget-heading">Income</div>
                    <div class="widget-subheading">Revenue generated</div>
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-warning"><span>$0</span></div>
                </div>
            </div>
        </div>
    </div>


</div>