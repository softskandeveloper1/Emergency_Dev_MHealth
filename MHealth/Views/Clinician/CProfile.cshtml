@model DAL.Models.mp_clinician
@using DAL.Utils;
@using DAL.Models;
@using MHealth.Helper;
@{
    ViewData["Title"] = "My Profile";
    IQueryable<DAL.Models.mp_appointment> mp_appointments = ViewBag.appointment;
    var profiles = (IQueryable<mp_profile>)ViewBag.profiles;
    var schedules = (IEnumerable<mp_clinician_availability>)ViewBag.schedules;
}

@{
    ViewData["Title"] = "My Profile";
}

<style>
    .datepicker table {
        margin: 0 0 0 20px !important;
    }
</style>
<div class="row" style="margin-top:-15px">
    <div class="col-lg-12">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("MyProfile","Clinician")">Home</a></li>

                <li class="active breadcrumb-item" aria-current="page">@Model.first_name @Model.last_name</li>

            </ol>

        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @if (string.IsNullOrEmpty(Model.account_name) || string.IsNullOrEmpty(Model.account_number) || string.IsNullOrEmpty(Model.bank_name) || string.IsNullOrEmpty(Model.mode_of_identification) || string.IsNullOrEmpty(Model.identification_number))
        {
            <div class="alert alert-warning fade show" role="alert">You need to ensure that your payment and identification information are completed. Go to <a href="@Url.Action("Settings","Clinician")">settings</a> to update this information</div>
        }
    </div>
    <div class="col-md-3">
        <div class="main-card mb-3 card">
            <div class="circular_image">
                <img src="@Url.Action("get_profile_image","User")" alt="avatar">
            </div>
            @*<img src="@Url.Action("get_profile_image","User")" alt="Card image cap" class="card-img-top">*@
            <div class="card-body" style="text-align:center">
                <h5 class="card-title">@string.Format("{0} {1} - {2}", Model.last_name, Model.first_name, Model.preferred_name)</h5>
                <h6 class="card-subtitle">
                    @(Model.area_of_interest != null ? Options.GetLookupName(Model.area_of_interest.Value) : "")
                </h6>
                <hr style="color:#3f6ad8" />
                <div class="row" style="display:none">
                    <div class="col-lg-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <div class="widget-content p-0">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">@Model.phone</div>
                                                <div class="widget-subheading">Phone</div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="widget-content p-0">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">@Model.marital_status</div>
                                                <div class="widget-subheading">Marital status</div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <div class="widget-content p-0">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">@Model.email</div>
                                                <div class="widget-subheading">Email</div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="widget-content p-0">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">@Model.education_level</div>
                                                <div class="widget-subheading">Education level</div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label style="font-weight:bold">About</label>
                        <p style="text-align:left">@Model.about</p>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-2 card">
                    <div class="no-gutters row">
                        <div class="col-md-3">
                            <div class="widget-content">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-right ml-0 mr-3">
                                        <div class="widget-numbers text-primary">@mp_appointments.Count(e => e.status == 169)</div>
                                    </div>
                                    <div class="widget-content-left">
                                        <div class="widget-heading">Pending</div>
                                        <div class="widget-subheading">Pending appointments</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="widget-content">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-right ml-0 mr-3">
                                        <div class="widget-numbers text-success">@mp_appointments.Count()</div>
                                    </div>
                                    <div class="widget-content-left">
                                        <div class="widget-heading">Appointments</div>
                                        <div class="widget-subheading">All my appointments</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="widget-content">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-right ml-0 mr-3">
                                        <div class="widget-numbers text-warning">@mp_appointments.Count(e => e.status == 170)</div>
                                    </div>
                                    <div class="widget-content-left">
                                        <div class="widget-heading">Sessions</div>
                                        <div class="widget-subheading">Completed sessions</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="widget-content">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-right ml-0 mr-3">
                                        <div class="widget-numbers text-danger">&#8358; 0</div>
                                    </div>
                                    <div class="widget-content-left">
                                        <div class="widget-heading">Income</div>
                                        <div class="widget-subheading">Total earning</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-5">
                <div class="main-card card">
                    <div class="card-header">
                        My Appointments

                    </div>



                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped">
                            <thead>
                                @*<tr>

                                        <th>Name</th>
                                        <th class="text-center">Status</th>

                                        <th>Time</th>
                                        <th class="text-center">Duration</th>
                                    </tr>*@
                            </thead>
                            <tbody>
                                @foreach (var appointment in mp_appointments.Where(e => e.status == 234))
                                {
                                    <tr class="tb-success">
                                        <th colspan="2">
                                            @appointment.appointment_typeNavigation.name
                                        </th>
                                        <td><a href="@Url.Action("Session","App",new { appointment_id = appointment.id })" class="btn btn-warning btn-sm">Start Session <i class="fa fa-play"></i></a></td>
                                        <td>
                                            <a href="@Url.Action("Details","Appointment",new { id = appointment.id })" id="PopoverCustomT-2" class="btn btn-primary btn-sm">Details</a>
                                        </td>

                                    </tr>
                                    <tr class="tb-primary">

                                        <td>
                                            <div class="widget-content p-0">
                                                <div class="widget-content-wrapper">
                                                    <div class="widget-content-left mr-3">
                                                        <div class="widget-content-left">
                                                            <img width="40" class="rounded-circle" src="@Url.Action("get_profile_image","User",new { user_id = appointment.client_.user_id })" alt="">
                                                        </div>
                                                    </div>
                                                    <div class="widget-content-left flex2">
                                                        <div class="widget-heading">@(appointment.client_.first_name + " " + appointment.client_.last_name)</div>
                                                        @*<div class="widget-subheading opacity-7">@(appointment.clinician_.phone)</div>
                                                            <div class="widget-subheading opacity-7">@appointment.clinician_.email</div>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="text-center">
                                            <div class="badge  @Options.GetStatusBadgeColor(Options.GetLookupName(appointment.status))">@Options.GetLookupName(appointment.status)</div>
                                        </td>

                                        <td>
                                            @appointment.start_date.ToString("dd MMM, yyyy hh:mm tt")
                                        </td>
                                        <td class="text-center">
                                            @appointment.appointment_serviceNavigation.time_minutes mins
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="card" style="min-height: 400px">
                    <div class="card-header-tab card-header">
                        <div class="card-header-title">
                            <i class="header-icon lnr-bicycle icon-gradient bg-love-kiss"> </i>
                            My Records
                        </div>
                        <ul class="nav">

                            <li class="nav-item"><a data-toggle="tab" href="#tab-patients" class="active nav-link">My Sessions</a></li>
                            <li class="nav-item"><a data-toggle="tab" href="#tab-availability" class="nav-link">My Availability</a></li>

                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">

                            <div class="tab-pane active" id="tab-patients" role="tabpanel">
                                <div class="table-responsive">

                                    @if (mp_appointments.Where(e => e.status == 170).Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="align-middle mb-0 table table-condensed">
                                                <thead>
                                                    <tr>

                                                        <th>Clinician</th>
                                                        <th>Type</th>
                                                        <th>Service</th>
                                                        <th>Time</th>
                                                        <th class="text-center">Duration</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var appointment in mp_appointments.Where(e => e.status == 170).Take(5))
                                                    {
                                                        <tr>

                                                            <td>
                                                                <div class="widget-content p-0">
                                                                    <div class="widget-content-wrapper">
                                                                        <div class="widget-content-left mr-3">
                                                                            <div class="widget-content-left">
                                                                                <img width="40" class="rounded-circle" src="@Url.Action("get_profile_image","User",new { user_id = appointment.client_.user_id })" alt="">
                                                                            </div>
                                                                        </div>
                                                                        <div class="widget-content-left flex2">
                                                                            <div class="widget-heading">@(appointment.client_.first_name + " " + appointment.client_.last_name)</div>
                                                                            @*<div class="widget-subheading opacity-7">@(appointment.client_.phone)</div>
                                                                                <div class="widget-subheading opacity-7">@appointment.client_.email</div>*@
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </td>

                                                            <td>  @appointment.appointment_typeNavigation.name</td>
                                                            <td>  @appointment.appointment_serviceNavigation.name</td>

                                                            <td>
                                                                @appointment.start_date.ToString("dd MMM, yyyy hh:mm tt")
                                                            </td>
                                                            <td class="text-center">
                                                                @appointment.appointment_serviceNavigation.time_minutes mins
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <p>
                                            You have not completed any session yet, please create an appointment and be able to view your sessions
                                        </p>

                                    }


                                </div>
                            </div>

                            <div class="tab-pane" id="tab-availability" role="tabpanel">

                                <b><p class="text-danger">@ViewBag.Error</p></b>
                                <p class="text-danger">Please always set your current availability period</p>
                                <p class="text-info">
                                    Days colored in red are not active, you won't receive bookings on these days
                                </p>
                                <div class="position-relative row">
                                    <div class="col-sm-12">
                                        @*<label for="table_item" class="text-center"></label>*@
                                        <div class="table-responsive">
                                            <table class="table " id="table_item">
                                                <thead>
                                                    <tr>
                                                        <th>Day</th>
                                                        <th>Start Time</th>
                                                        <th>End Time</th>
                                                        <th width="120">Set Status</th>
                                                        <th><a href="#" data-toggle="modal" class="btn btn-primary pull-right" data-id="" data-target=".availability_modal" id="availability_modal"><i class="fa fa-plus"></i></a></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var schedule in schedules)
                                                    {
                                                        <tr>
                                                            <form asp-controller="Clinician" asp-action="UpdateAvailability" id="@("form"+schedule.id)" method="post">
                                                                <td>
                                                                    <input type="text" name="day_name" value="@schedule.day_name" class="form-control @(!schedule.status.Value? "bg-danger" : "") " readonly />
                                                                </td>
                                                                <td><input name="start_time" type="text" value="@schedule.start_time.TimeOfDay" class="form-control daterange-single"></td>
                                                                <td><input name="end_time" type="text" value="@schedule.end_time.TimeOfDay" class="form-control  daterange-single"></td>
                                                                <td>
                                                                    <select name="status" class="form-control" required>
                                                                        <option value="true">Active</option>
                                                                        <option value="false">Inactive</option>
                                                                    </select>
                                                                </td>
                                                                <td>
                                                                    <a href="#" onclick="if (confirm('Are you sure to update your schedule for this day ?')) {
        event.preventDefault();
        document.getElementById('form' +@schedule.id).submit();
    }" class="btn btn-sm btn-success" title="Update schedule"><i class="fa fa-edit"></i></a>
                                                                </td>

                                                            </form>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>


                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



</div>


@section Scripts{

    <div class="modal fade availability_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form method="post" asp-controller="Clinician" asp-action="UpdateAvailability">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Set Day Availability</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="position-relative row form-group">
                            <label class="col-sm-3 col-form-label">Day</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <input type="hidden" name="status" value="true" />
                                    @*<select class="form-control" name="day_name" required>
                                            <option value="">Select Day</option>
                                            @foreach (var day in ViewHelper.GetdayOfWeeks())
                                            {
                                                <option value="@day">@day</option>

                                            }

                                        </select>*@
                                    <input type="text" name="day_name" onkeypress="return false" id="dayAvilable" autocomplete="off" class="form-control" required />
                                </div>
                            </div>
                        </div>

                        <div class="position-relative row form-group">
                            <label class="col-sm-3 col-form-label">Start time</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="pe-7s-date"></i></span></div>
                                    <input name="start_time" required onkeydown="return false;" autocomplete="off" type="text" value="" class="form-control  daterange-single">
                                </div>
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label class="col-sm-3 col-form-label">End time</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="pe-7s-date"></i></span></div>
                                    <input name="end_time" required type="text" onkeydown="return false;" autocomplete="off" value="" class="form-control  daterange-single">
                                </div>
                            </div>
                        </div>

                        @*<div class="form-group">
                                <label class="form-label">What time do you want the session to start?</label>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-calendar-times"></i></span></div>
                                    <input name="time" type="text" required class="form-control  timepicker" readonly>
                                </div>
                            </div>*@

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="~/lib/datepicker/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {

            //$('.daterange-single').daterangepicker({
            //    singleDatePicker: true,
            // //   parentEl: ".modal-body",
            //    timePicker: true,
            //    timePicker24Hour: true,

            //    locale: {
            //        format: 'H:mm'
            //    }
            //});

            $('#dayAvilable').datepicker({
                orientation: "left",
                autoclose: true,
                todayHighlight: true,
                startDate: '0',
                endDate: '+1m',
                format: "mm/dd/yyyy",
            });


            $('.daterange-single').timepicker({
                timeFormat: 'h:mm p',
                interval: 15,
                minTime: '1',
                maxTime: '12:00pm',
                // defaultTime: '11',
                startTime: '7:00',
                dynamic: false,
                dropdown: true,
                scrollbar: true,
                zindex: 9999999
            });

        });</script>
}



