@using DAL.Utils
@{
    var provider_type = ViewBag.provider_type;
    var provider_type_name = ViewBag.provider_type_name;
}
    <div class="row">



            <div class="form-group col-md-12">
                <div class="position-relative form-group">
                    <label class="control-label">Clinic name</label>
                    <input name="name" class="form-control" required>
                </div>
            </div>
           
            <div class="form-group col-md-12">
                <div class="position-relative form-group">
                    <label class="control-label">Clinic address</label>
                    <input name="address_c" class="form-control" required>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="position-relative form-group">
                    <label class="control-label">Last name</label>
                    <input name="last_name_c" class="form-control" required>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="position-relative form-group">
                    <label class="control-label">First name</label>
                    <input name="first_name_c" class="form-control" required>
                </div>
            </div>


            <div class="form-group col-md-6">
                <div class="position-relative form-group">
                    <label class="control-label">Mobile number</label>
                    <input name="phone_c" class="form-control" required>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="position-relative form-group">
                    <label class="control-label">Email</label>
                    <input name="email_c" class="form-control" required>
                </div>
            </div>

            <div class="form-group col-md-12">
                <div class="position-relative form-group">
                    <label class="control-label">Landmark</label>
                    <input name="landmark" class="form-control" required>
                </div>
            </div>

            <div class="form-group col-md-4">
                <div class="position-relative form-group">
                    <label class="control-label">Hours of operation</label>
                    <input name="hours_of_operation" class="form-control" required>
                </div>
            </div>

            <div class="form-group col-md-4">
                <div class="position-relative form-group">
                    <label class="control-label">Number of locations</label>
                    <input name="number_of_locations" type="number" min="0" class="form-control" >
                </div>
            </div>

            <div class="form-group col-md-4">
                <div class="position-relative form-group">
                    <label class="control-label">Number of beds by specialty</label>
                    <input name="number_of_beds" class="form-control"  type="number" min="0" >
                </div>
            </div>

            <div class="form-group  col-md-12">
                <div class="position-relative form-group">
                    <label class="control-label">Do you have a diagnostic center? </label>
                    @Html.DropDownList("diagnostics_center", new SelectList(Options.Getlookups("yesno"), "id", "value", null), null, new { @class = "form-control", @required = "required" })
                </div>
            </div>
        </div>
