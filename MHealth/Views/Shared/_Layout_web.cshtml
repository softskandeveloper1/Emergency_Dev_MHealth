        $('#provider_type').on('change', function (e) {
            if (this.value == 177) {
                $("#div_area_of_interest").show();
            } else {
                $("#div_area_of_interest").hide();
            }
        });

        $('#area_of_interest').on('change', function (e) {
            if (this.value == 167) {
                $("#div_primary_care_type").show();
            } else {
                $("#div_primary_care_type").hide();
            }
        });

        $('#primary_care_type').on('change', function (e) {
            if (this.value == 180) {
                $("#div_primary_care_specialty").show();
            } else {
                $("#div_primary_care_specialty").hide();
            }
        });

            $('#appointment_category_sub').on('change', function (e) {
            var optionSelected = $("option:selected", this);
            if (optionSelected.text() == "Other") {
                $("#div_appointment_category_sub_other").show();
                $("#appointment_category_sub_other").attr("required","required");
               
            } else {
                $("#div_appointment_category_sub_other").hide();
                $("#appointment_category_sub_other").removeAttr("required");
                 $("#appointment_category_sub_other").val("");
            }
          });
        //appointment_category_sub
    </script>


