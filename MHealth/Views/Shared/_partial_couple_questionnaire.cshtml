    <fieldset class="couple">

        <div class="form-group">
            <label class="control-label">What is your relationship status?</label>
            @Html.DropDownList("relationship_status", new SelectList(Options.Getlookups("relationship_status"), "id", "value", null), null, new { @class = "form-control", @required = "required",id="relationship_status" })
        </div>
        <div class="form-group" id="div_relationship_status_other" style="display:none">
            <label class="control-label">Please specifiy</label>
            <input type="text" name="relationship_status_other" id="relationship_status_other" class="form-control" />
        </div>

        <div class="form-group">
            <div class="f1-buttons">
                <button type="button" class="btn btn-previous">Previous</button>
                <button type="button" class="btn btn-next">Next</button><br><br>
            </div>
        </div>

    </fieldset>

<fieldset class="couple">

    <div class="form-group">
        <label class="control-label">How long have you been together?</label>
        <input type="text" name="relationship_duration" class=" form-control" required />
    </div>
    <div class="form-group">
        <div class="f1-buttons">
            <button type="button" class="btn btn-previous">Previous</button>
            <button type="button" class="btn btn-next">Next</button><br><br>
        </div>
    </div>

</fieldset>

<fieldset class="couple">

    <div class="form-group">
        <label class="control-label">What are you hoping to achieve in couple counseling? (check all that apply)</label>
        <div>
            @foreach (var lookup in Options.Getlookups("couple_counseling_expectation"))
            {
                <div class="form-check" style="margin-left:10px">
                    <label class="form-check-label">
                        <input class="inp-cbx form-check-input" id="couple_counseling_expectation" name="couple_counseling_expectation" value="@lookup.id" type="checkbox">@lookup.value
                    </label>
                </div>
            }
        </div>
