@using DAL.Utils;
@using DAL.Models;
@model PaginatedList<mp_credit>
@{
    ViewData["Title"] = "Payments By Service";
    var today = DateTime.Now;
    var thisWeekStart = today.AddDays(-(int)today.DayOfWeek);
    var thisWeekEnd = thisWeekStart.AddDays(7).AddSeconds(-1);
    var thisMonthStart = today.AddDays(1 - today.Day);
    var thisMonthEnd = thisMonthStart.AddMonths(1).AddSeconds(-1);
    var thisYearStart = new DateTime(today.Year, 1, 1);
    var thisYearEnd = new DateTime(today.Year, 12, 31);
}

<div class="row" style="margin-top:-15px">
    <div class="col-lg-10">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/">Home</a></li>
                <li class="active breadcrumb-item" aria-current="page">Payments By Service</li>
            </ol>
        </nav>
    </div>
    <div class="col-lg-2">
        @if (User.IsInRole("admin") || User.IsInRole("super_admin"))
        {
            @await Html.PartialAsync("../Shared/_quick_nav")
        }
    </div>
</div>

<div class="row">


    <div class="col-md-12">
        <div class="main-card  card">

            <div class="card-body">
                <div class="table-responsive">



                    <table class="align-middle mb-0 table table-borderless table-striped table-hover custom-ui-table">
                        <thead>
                            <tr class="bg-info text-white">

                                <th>Service name</th>
                                <th>Daily</th>
                                <th>Weekly</th>
                                <th>Monthly</th>
                                <th>Yearly</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var creditInfos in Model.ToLookup(x => x.appointment_.appointment_activity_sub_id))
                                {
                                    {
                                        <tr class="tb-primary">
                                            <td>@creditInfos.FirstOrDefault().appointment_.appointment_sub_typeNavigation.name</td>
                                            <td>$@creditInfos.Where(x => x.created_at.Date == today.Date).Sum(x => x.amount)</td>
                                            <td>$@creditInfos.Where(x => x.created_at.Date >= thisWeekStart.Date && x.created_at.Date <= thisWeekEnd.Date).Sum(x => x.amount)</td>
                                            <td>$@creditInfos.Where(x => x.created_at.Date >= thisMonthStart.Date && x.created_at.Date <= thisMonthEnd.Date).Sum(x => x.amount)</td>
                                            <td>$@creditInfos.Where(x => x.created_at.Date >= thisYearStart.Date && x.created_at.Date <= thisYearEnd.Date).Sum(x => x.amount)</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>

                    @if (Model.Any())
                    {

                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";

                        <div style="margin-top:10px" class="pull-right">
                            <nav class="" aria-label="pagination">
                                <ul class="pagination pagination-sm">
                                    <li class="page-item"><a href="@Url.Action("PaymentsByService","Reports",new {pageNumber=Model.PageIndex - 1,search=ViewBag.query})" class="page-link @prevDisabled" aria-label="Previous"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>

                                    <li class="page-item"><a href="@Url.Action("PaymentsByService","Reports",new {pageNumber=Model.PageIndex + 1,search=ViewBag.query})" class="page-link @nextDisabled" aria-label="Next"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    }


                </div>

            </div>
        </div>

    </div>


</div>

@section styles{
    <link href="~/css/table.css" type="text/css" rel="stylesheet" />
    <style>
        a.disabled {
            pointer-events: none;
            cursor: default;
        }
    </style>

}


