@using DAL.Utils;
@using DAL.Models;
@model PaginatedList<mp_profile>
@{
    ViewData["Title"] = "Appointments Cancelled By Clients";
}

<div class="row" style="margin-top:-15px">
    <div class="col-lg-10">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/">Home</a></li>
                <li class="active breadcrumb-item" aria-current="page">Appointments Cancelled By Clients</li>
            </ol>
        </nav>
    </div>
    <div class="col-lg-2">
        @if (User.IsInRole("admin") || User.IsInRole("super_admin"))
        {
            @await Html.PartialAsync("../Shared/_quick_nav")
        }
    </div>
</div>

<div class="row">


    <div class="col-md-12">
        <div class="main-card  card">

            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Any())
                    {

                        <table class="align-middle mb-0 table table-borderless table-striped table-hover custom-ui-table">
                            <thead>
                                <tr class="bg-info text-white">

                                    <th>Name</th>
                                    <th>Preferred name</th>
                                    <th>Email</th>
                                    <th>Member ID</th>
                                    <th>No. of times cancelled</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in Model)
                                {
                                    <tr class="tb-warning">

                                        <td>
                                            <div class="widget-content p-0">
                                                <div class="widget-content-wrapper">
                                                    <div class="widget-content-left mr-3">
                                                        <div class="widget-content-left">
                                                            <img width="40" class="rounded-circle" src="@Url.Action("get_profile_image","User",new { user_id = client.user_id })" alt="">
                                                        </div>
                                                    </div>
                                                    <div class="widget-content-left flex2">
                                                        <div class="widget-heading"><a href="@Url.Action("Profile","Profile",new { id = client.id })">@string.Format("{0} {1}", client.last_name, client.first_name)</a></div>
                                                        @*<div class="widget-subheading opacity-7">@client.phone</div>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@client.preferred_name</td>
                                        <td>@client.email</td>
                                        <td><strong>@client.unique_id.ToString("D10")</strong></td>
                                        <td>@client.mp_appointment.Count(x => x.status == 171 && x.cancelled_by == client.id)</td>

                                    </tr>
                                }




                            </tbody>
                        </table>

                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";

                        <div style="margin-top:10px" class="pull-right">
                            <nav class="" aria-label="pagination">
                                <ul class="pagination pagination-sm">
                                    <li class="page-item"><a href="@Url.Action("AppointmentsCancelledByClients","Reports",new {pageNumber=Model.PageIndex - 1,search=ViewBag.query})" class="page-link @prevDisabled" aria-label="Previous"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>

                                    <li class="page-item"><a href="@Url.Action("AppointmentsCancelledByClients","Reports",new {pageNumber=Model.PageIndex + 1,search=ViewBag.query})" class="page-link @nextDisabled" aria-label="Next"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    }


                </div>

            </div>
        </div>

    </div>


</div>

@section styles{
    <link href="~/css/table.css" type="text/css" rel="stylesheet" />
    <style>
        a.disabled {
            pointer-events: none;
            cursor: default;
        }
    </style>

}


