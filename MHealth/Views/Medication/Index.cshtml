@model IEnumerable<DAL.Models.mp_medication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.medication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dosage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.physician)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.last_dose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.taking_as_prescribed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_by)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.profile_)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.medication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dosage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.physician)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_dose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.taking_as_prescribed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.profile_.first_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
