<section id="bg">
    <div class="row">
   
        <div class="col-md-4 offset-md-4">
            <div style="padding-bottom:200px">

                <h3>New to MySpace MyTime?</h3>

                <div class="dropdown">
                    <button style="width: 100%; height:50px; font-size:1.2em" class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Get Started
                    </button>
                    <div class="dropdown-menu" style="width: 100%;" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="@Url.Action("reg_provider","User")">as a provider</a>
                        <a class="dropdown-item" href="@Url.Action("reg_member","User")">as a member</a>
                    </div>
                </div>

                <div class="card" style="display:none">
                    <div class="card-body">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="ad-slider">

                                        <p>New to MySpace MyTime?</p>
                                        <a href="@Url.Action("reg_member","User")" class="mb-2 mr-2 btn btn-warning btn-lg btn-block">
                                            Get Started
                                        </a>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="ad-slider">

                                        <p>I am a provider and I want to provide support to people.</p>
                                        <a href="@Url.Action("reg_provider","User")" class="mb-2 mr-2 btn btn-warning btn-lg btn-block">
                                            Get Started
                                        </a>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="card" style="margin-top:20px">
                    <div class="card-header">
                        <div class="card-header-title">Already a member? Login</div>
                    </div>

                    <div class="card-body">

                        <form id="account" method="post">
                            @*<h4>Use a local account to log in.</h4>*@

                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email" class="sr-only" for="Email"></label>
                                <input asp-for="Input.Email" class="form-control f1-email" placeholder="Email..." id="Email" style="height:44px" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="sr-only" for="Password"></label>
                                <input asp-for="Input.Password" class="form-control f1-password" id="Password" placeholder="Password..." style="height:44px" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.RememberMe">
                                    <input style="width:13px" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>

                                <div class="checkbox">

                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info">Log in</button>
                            </div>
                            <div class="form-group">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                @*<p>
                            Don't have an account yet,
