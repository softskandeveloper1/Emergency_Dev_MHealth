@page
@model ResetPasswordModel
@using DAL.Utils
@{
    ViewData["Title"] = "Reset password";
    Layout = "_Layout_web";
}

@section styles{
    <style>
        body {
            /*font-family: 'Tajawal';*/
            background-color: white !important
        }

        #bg {
            background: url(../../images/2.jpg) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
            -o-background-size: cover;
        }

        body {
            overflow-x: hidden
        }

        .carousel-indicators li {
            background-color: green !important;
        }

        .carousel-indicators {
            position: inherit;
        }

        .ad-slider {
            margin: 10px;
        }

            .ad-slider > p {
                color: white
            }

        a {
            color: white
        }

        .card-header {
            padding: .75rem 1.25rem;
            margin-bottom: 0;
            color: inherit;
            background-color: rgba(0, 0, 0, 0.7);
            border-bottom: 1px solid rgba(26,54,126,0.125);
        }

        .card-header, .card-title {
            text-transform: uppercase;
            color: white;
            font-weight: bold;
            font-size: .88rem;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.7);
        }

        h4 {
            font-size: 2.5rem;
        }
    </style>
}


<section id="bg">
    <div class="row">
        <div class="col-md-2">
            <div class="text-center">

            </div>
        </div>
        <div class="col-md-3 offset-md-6">
            <div style="padding-top:150px; padding-bottom:200px">

                <div class="card" style="margin-top:20px">
                    <div class="card-header">
                        <div class="card-header-title">Reset your password.</div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input asp-for="Input.Code" type="hidden" />
                                    <div class="form-group">
                                        <label asp-for="Input.Email" style="color:white;"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password" style="color:white;"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.ConfirmPassword" style="color:white;"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Reset</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>




@section scripts{
    <script>
        $('#appointment_type').on('change', function (e) {
            if (this.value == 5) {
                $("#div_therapy_type").show();
            } else {
                $("#div_therapy_type").hide();
            }
        });

        $('#provider_type').on('change', function (e) {
            if (this.value == 177) {
                $("#div_area_of_interest").show();
            } else {
                $("#div_area_of_interest").hide();
            }
        });

        $('#area_of_interest').on('change', function (e) {
            if (this.value == 167) {
                $("#div_primary_care_type").show();
            } else {
                $("#div_primary_care_type").hide();
            }
        });

        $('#primary_care_type').on('change', function (e) {
            if (this.value == 180) {
                $("#div_primary_care_specialty").show();
            } else {
                $("#div_primary_care_specialty").hide();
            }
        });




    </script>

    <partial name="_ValidationScriptsPartial" />

}
